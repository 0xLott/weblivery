<%- include('partials/header') %>

<section id="dashboard">

    <div class="container-fluid">

        <h1>Dashboard</h1>

        <nav class="navbar"></nav>

        <h1>Ola, <%= user.name %></h1>

        <div class="menus">
        
            <% if (user.email === 'admin') { %>

                <form class="btn-dash" action="/user/register" method="get">
                    <button class="btn btn-primary" type="submit">Gerenciar Desenvolvedores</button>
                </form>
                    
                <form class="btn-dash" action="/request/view" method="get">
                    <% if (requestAlert) { %>
                    <button class="btn btn-primary" type="submit"><i class="fa-solid fa-bell"></i> Solicitações</button>
                    <% } else { %>
                    <button class="btn btn-primary" type="submit">Solicitações</button>
                    <% } %>
                </form>

            <% } %>

            <form class="btn-dash" action="/user/quit" method="post">
                <button class="btn btn-primary" type="submit">Logout</button>
            </form>

        </div>
                
        <h1>Projetos</h1>

        <% projects.forEach((project)=> { %>

            <div class="project-box">
                <p><b>Projeto:</b> <%= project.projectName %></p>
                <p><b>Project Owner:</b> <%= project.projectOwner %></p>
                <p><b>Status:</b> <%= project.projectStatus %></p>

                <form action="/project/<%= project.id %>" method="get">
                    <button class="btn btn-secondary" type="submit">Detalhes</button>
                </form>
                
            </div>
        <% }) %>
    </div>

</section>

<%- include('partials/footer') %>