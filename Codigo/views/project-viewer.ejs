<%- include('partials/header') %>

<section id="project">

    <div class="container-fluid">

        <div class="project-header">
            <h1><%= project.projectName %></h1>
        </div>

        <div class="project-body">

            <div class="row">

                <div class="col">

                    <p>Status: <%= project.projectStatus %></p>

                    <p>Cliente: <%= project.clientName %></p>

                    <p>Desenvolvedores Responsaveis:</p>

                    <% project.developers.forEach(dev => { %>
                        <p><%= dev.name %></p>
                    <% }) %>

                </div>

                <div class="col">

                    <p>Data Limite: <%= project.projectDeadline %></p>

                </div>


            </div>

        </div>

        <div class="project-footer">

            <h1>ToDoList</h1>

        </div>

    </div>

</section>
    
<%- include('partials/footer') %>