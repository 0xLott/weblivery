<%- include('partials/header') %>

<section id="dashboard">

    <div class="container-fluid">

        <h1>Solicitações de Serviço</h1>

        <% requests.forEach((request) => { %>
                <hr>
                <div class="request-box">
                    <p><b>Solicitante</b>: <%= request.requesterFullname %></p>
                    <p><b>Titulo</b>: <%= request.requestTitle %></p>
                    <p><b>Descrição</b>: <%= request.requestDescription %></p>
                    <p><b>Email</b>: <%= request.email %></p>
                    <p><b>Telefone</b>: <%= request.phone %></p>
                    <p><b>Whatsapp</b>: 
                        <% if (request.whatsapp == null) { %>
                            Não
                        <% } else { %>
                            Sim
                        <% } %>
                    </p>
                </div>

                <form class="request-btn" action="/admin/requests/decline" method="post">
                    <button class="request-btn" type="submit" name="decline" value="<%= request._id %>">Recusar</button>
                </form>

                <button class="request-btn" type="button" data-bs-toggle="modal" data-bs-target="#a<%= request._id %>">Aceitar</button>
                  
                <!-- Modal -->
                <div class="modal fade" id="a<%= request._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    
                    <div class="modal-dialog">

                        <form action="/admin/requests/accept" method="post">

                            <div class="modal-content">

                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Cadastro do Projeto</h1>
                                </div>

                                <div class="modal-body">

                                    <div class="mb-3">
                                        <label for="project-name" class="col-form-label">Título:</label>
                                        <input type="text" class="form-control" id="project-name" name="projectName" value="<%= request.requestTitle %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="project-desc" class="col-form-label">Descrição:</label>
                                        <textarea class="form-control" id="project-desc" name="projectDescription"><%= request.requestDescription %></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label for="project-deadline" class="col-form-label">Data Limite:</label>
                                        <input type="date" placeholder="dd-mm-yyyy" class="form-control" id="project-deadline" name="projectDeadline">
                                    </div>

                                    <!-- TODO Ler desenvolvedores cadastrados no banco de dados e inserir como options do select -->
                                    <div class="mb-3">
                                        <label for="project-team">Selecionar Desenvolvedores:</label>
                                        
                                        <select class="mt-1 selectpicker" title="Nenhum selecionado" data-live-search="true" name="assignedDevelopers[]" multiple>
                                            <% developers.forEach((developer) => { %>
                                                <option value="<%= developer.id %>"><%= developer.name %></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                    <!-- Dados do Cliente -->

                                    <div class="mb-3">
                                        <label for="client-name" class="col-form-label">Cliente:</label>
                                        <input type="text" class="form-control" id="client-name" name="clientName" value="<%= request.requesterFullname %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="client-email" class="col-form-label">E-mail:</label>
                                        <input type="text" class="form-control" id="client-email" name="clientEmail" value="<%= request.email %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="client-phone" class="col-form-label">Telefone de contato:</label>
                                        <input type="text" class="form-control" id="client-phone" name="clientPhone" value="<%= request.phone %>">
                                    </div>
                                </div>

                                <input type="hidden" name="id" value="<%= request._id %>">

                                <div class="modal-footer">

                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                                    <button class="btn btn-light" type="submit">Registrar</button>
                                    
                                </div>

                            </div>

                        </form>

                    </div>

                </div>

        <% }) %>

    </div>

</section>

<%- include('partials/footer') %>
